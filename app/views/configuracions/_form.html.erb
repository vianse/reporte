<div class="container">
    <div class="row">
      <div class="col-md-4 col-md-offset-4">
        <div class="panel panel-default">
          <div class="panel-heading">
            <h3 class="panel-title">Nueva configuración</h3>
          </div>
          <div class="panel-body">
            <%= form_for(@configuracion) do |f| %>
            <fieldset>
                <div class="form-group">
                  <%= f.label "Etiqueta con la que se identifican las internas desde el DMS" %><br>
                  <%= f.text_field :internas,:placeholder => "Eje. I o Internas; verificar con sistemas", :class => "form-control" %>
                </div>
              <div class="form-group">
                 <%= f.label "Ingresa los días apartir de los cuales se empezaran a realizar pronosticos" %><br>
                 <%= f.text_field :dias,:placeholder => "Eje. 5 (Solo Números)", :class => "form-control" %>
              </div>    
              <div class="field">
                <%= f.hidden_field :app_id,:value => @acceso.app_id %>
              </div>
              <div class="actions">
                 <%= f.submit "Guardar", :class => "btn btn-lg btn-success btn-block" %>
              </div>
            </fieldset>
            <% end -%>
              <hr/>
          </div>
      </div>
    </div>
  </div>
</div>

